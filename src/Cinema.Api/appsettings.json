{
  "ApiKey": "your-secret-api-key-here",
  "JwtSettings": {
    "Secret": "YourSuperSecretKeyHere1234567890!@#$%^&*()_+",
    "Issuer": "Cinema.Api",
    "Audience": "Cinema.Client",
    "AccessTokenExpirationMinutes": 15,
    "RefreshTokenExpirationDays": 7
  },
  "ConnectionStrings": {
    "SqlServer": "Server=localhost,1433;Database=CinemaDb;User Id=sa;Password=YourStrong@Passw0rd;TrustServerCertificate=True;MultipleActiveResultSets=true"
  },
  "MongoDbSettings": {
    "ConnectionString": "mongodb://root:password123@localhost:27017",
    "DatabaseName": "CinemaReadDb"
  },
  "KafkaSettings": {
    "BootstrapServers": "localhost:9092",
    "DomainEventsTopic": "cinema.domain.events",
    "IntegrationEventsTopic": "cinema.integration.events",
    "ConsumerGroupId": "cinema-api-consumer-group"
  },
  "Consul": {
    "Host": "localhost",
    "Port": 8500,
    "ServiceHost": "localhost",
    "ServicePort": 8080,
    "HealthCheckIntervalSeconds": 10,
    "HealthCheckTimeoutSeconds": 5,
    "DeregisterCriticalServiceAfterMinutes": 1
  },
  "Serilog": {
    "Using": ["Serilog.Sinks.Console", "Serilog.Sinks.Seq"],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Debug",
        "Microsoft.EntityFrameworkCore": "Debug",
        "System": "Debug"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Seq",
        "Args": { "serverUrl": "http://localhost:5341" }
      }
    ],
    "Enrich": ["FromLogContext", "WithMachineName", "WithThreadId"],
    "Properties": {
      "Application": "Cinema.Api"
    }
  },
  "OpenTelemetry": {
    "JaegerEndpoint": "http://jaeger:4317",
    "ServiceName": "Cinema.Api"
  },
  "Seq": {
    "ServerUrl": "http://seq:5341"
  },
  "AllowedHosts": "*"
}
